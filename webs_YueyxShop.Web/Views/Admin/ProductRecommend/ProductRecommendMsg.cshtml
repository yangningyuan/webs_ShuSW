                    </td>
                </tr>
            </table>
            </div>
        </div> 
        <!--列表-->
        <div class="pageContent">
        <div class="panelBar">
            <ul class="toolBar">
                @if (Convert.ToBoolean(ViewData["IsHasFunRole"]))
                {
                    <li><a class="add" href="@Url.Action("SelectProductsMsg?prt_ID={prt_ID}", "ProductRecommend")"  target="dialog" width="850" height="600"  rel="w_ProductRecommendAdd" ><span>添加</span></a></li>
