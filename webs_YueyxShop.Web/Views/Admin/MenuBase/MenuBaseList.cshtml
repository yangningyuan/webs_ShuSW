@using System.Collections.Generic
@using System.Data
@model IEnumerable<webs_YueyxShop.Model.MenuBase>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="110" rel="MenuBox">
    <colgroup width="30px" />
    <colgroup width="100px" />
    <colgroup width="200px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup width="200px" />
    <colgroup width="60px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                编码
            </th>
            <th>
                名称
            </th>
            <th>
                等级
            </th>
            <th>
                顺序
            </th>
            <th>
                创建时间
            </th>
            <th>
                状态
            </th>
            <th>
                链接
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="dli_id" rel="@item.m_ID|@item.m_MingCh|@item.m_CengJ|@item.m_BianM" ondblclick="OpenMenuBaseEdit('@item.m_ID|@item.m_MingCh|@item.m_CengJ|@item.m_BianM')">
                <td>
                </td>
                <td>
                    @item.m_BianM
                </td>
                <td>
                    @item.m_MingCh
                </td>
                <td>
                    @item.m_CengJ
                </td>
                <td>@item.m_PaiX
                </td>
                <td>
                    @item.m_CreatedOn.ToString("yyyy-MM-dd hh:mm:ss")
                </td>
                <td>
                    <span style="color: Red">@item.m_StateCode.ToString().Replace("0", "启用").Replace("1", "禁用")</span>
                </td>
                <td>
                    @item.m_Path
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="MenuBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>
