@using System.Collections.Generic
@using System.Data

<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="160" rel="OrderBox">
    <colgroup width="10px" />
    <colgroup width="150px" />
    <colgroup width="150px" />
    <colgroup width="70px" />
    <colgroup width="70px" />
    <colgroup width="70px" />
    <colgroup width="70px" />
    <colgroup width="400px" />
    <colgroup width="70px" />
    <colgroup width="70px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                订单编号
            </th>
            <th>
                成交时间
            </th>
            <th>
                订单金额(元)
            </th>
            <th>
                配送方式
            </th>
            <th>
                支付方式
            </th>
            <th>
                买家名称
            </th>
            <th>
                收货地址
            </th>
            <th>
                订单备注
            </th>
            <th>
                订单状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow item in ((System.Data.DataTable)ViewData["PageList"]).AsEnumerable())
        {
            string status = ((webs_YueyxShop.Model.OrderStatus)item["o_StatusCode"]).ToString();
            <tr target="o_ID" rel="@item["o_ID"]" >
                <td>
                </td>
                <td>
                    @item["o_Code"]
                </td>
                <td>
                    @item["o_CreateOn"]
                </td>
                <td>
                    @item["o_Pric"]
                </td>
                <td>
                    @item["st_Name"]
                </td>
                <td>
                    @item["pay_Name"]
                </td>
                <td>
                    @item["m_NickName"]
                </td>
                <td title="@item["c_Address"]">
                    @item["c_Address"]
                </td>
                <td>
                    @item["o_Mark"]
                </td>
                <td>
                    <span style="color: Red">@status</span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="OrderBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>