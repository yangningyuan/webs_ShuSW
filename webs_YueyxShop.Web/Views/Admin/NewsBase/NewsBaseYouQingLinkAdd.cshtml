@model webs_YueyxShop.Model.NewsBase
<!DOCTYPE html>
<html>
<head>
    <title>月月兴食品商行后台管理系统</title>
</head>
<body>
    <form id="form1" runat="server" method="post" action="@Url.Action("YouQingAdd", "NewsBase", new { mid = @ViewData["mid"] })"
              class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone)">
    @Html.Hidden("txbotype", @ViewData["otype"])
    @Html.HiddenFor(model=>model.n_ID)
    @Html.HiddenFor(model=>model.n_CreatedBy)
    <input type="hidden" id="hfFilePath" value="" />
    <div class="pageContent">
        <div class="pageFormContent" layouth="52">
            <div class="unit">
                <label>
                   链接名称：</label>
                @Html.TextBoxFor(model => model.n_Title, new { @class = "required", @style = "width:300px;",@maxlength="12" })
            </div>
            <div class="unit">
                <label>
                    链接地址：</label>
                @Html.TextBoxFor(model => model.n_RedirectUrl, new { @style = "width:300px;",@class="required url" })
            </div>
            <div class="unit">
                <label>
                    排序：</label>
                @Html.TextBoxFor(model => model.n_Sort, new { @style = "width:300px;",@class="number",min="0" })<label style="color:red; width:120px;">如0,1,2,3......,0最靠前</label>
            </div>
            <div class="unit">
                <label>
                    备注：</label>
                @Html.TextAreaFor(model => model.n_Synopsis, new {@style="width:300px; height:50px;" })
            </div>
        </div>
        <div class="formBar">
            <ul>
                    <li id="save">
                        <div class="buttonActive" id="submit" runat="server">
                            <div class="buttonContent">
                                <button id="sub" type="submit">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消
                            </button>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</body>
</html>
