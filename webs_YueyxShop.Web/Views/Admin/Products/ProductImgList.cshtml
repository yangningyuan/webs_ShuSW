@using System.Collections.Generic
@using System.Data
@using webs_YueyxShop.Model 
           
@Html.Hidden("hfPId", @ViewData["hfPId"])
<table class="table" width="60%" layouth="110" rel="pimgBox">
    <colgroup width="10px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                产品编码
            </th>
            <th>
                图片预览
            </th>
            <th>
                 图片类别
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow item in ((System.Data.DataTable)ViewData["PageList"]).AsEnumerable())
        {
            <tr target="img_id" rel="@item["pi_ID"]|@item["sku_ID"]|@item["pi_Type"]" ondblclick="OpenMenuBaseEdit('@item["pi_ID"]|@item["sku_ID"]|@item["pi_Type"]')">
                <td>
                </td>
                <td>
                   @item["sku_Code"]
                </td>
                <td>
                   <img  src="@item["pi_Url"]" style="width:50px;height:120px"  onclick="OpenPImg('@item["pi_Url"]')"/>
                </td>
                <td style="height:auto">
                    <span >@item["pi_Type"].ToString().Replace("False", "非封面").Replace("True", "封面")</span>
                </td>
                <td>
                    <span style="color: Red">@item["pi_StatusCode"].ToString().Replace("0", "启用").Replace("1", "禁用")</span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="pimgBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>

