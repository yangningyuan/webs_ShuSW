@using System.Collections.Generic
@using System.Data
@model IEnumerable<webs_YueyxShop.Model.ShipTypeBase>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="138" rel="ShipTypeBox">
    <colgroup width="30px" />
    <colgroup width="50px" />
    <colgroup width="200px" />
    <colgroup width="300px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                ID
            </th>
            <th>
                名称
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="st_ID" rel="@item.st_ID " ondblclick="OpenMenuBaseEdit('@item.st_ID')">
                <td>
                </td>
                <td>
                    @item.st_ID 
                </td>
                <td>
                    @item.st_Name
                </td>
                <td>
                    @if (item.st_StatusCode == 0)
                    {
                        <label style="color:Green;">启用</label>
                    }
                    else
                    { 
                        <label style="color:Red;">禁用</label>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="ShipTypeBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>