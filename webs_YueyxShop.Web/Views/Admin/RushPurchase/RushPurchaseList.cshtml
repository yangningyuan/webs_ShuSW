@using System.Collections.Generic
@using System.Data

@model IEnumerable<webs_YueyxShop.Model.vm_RPDetails>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />

<table class="table" width="100%" layouth="138" rel="rpBox">
    <colgroup width="5px" />
    <colgroup width="130px" />
    <colgroup width="40px" />
    <colgroup width="40px" />
    <colgroup width="100px" />
    <colgroup width="100px" />
    <colgroup width="60px" />
    <colgroup width="50px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                商品名称
            </th>
            <th>
                抢购商品数量
            </th>
            <th>
                抢购商品价格
            </th>
            <th>
                抢购开始时间
            </th>
            <th>
                抢购结束时间
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="dli_id" rel="@item.rp_ID" ondblclick="OpenMenuBaseEdit('@item.rp_ID')">
                <td>
                </td>
                <td>
                    @item.p_Name
                </td>
                <td>
                    @item.rp_pCount
                </td>
                <td>
                    @item.rp_pPric
                </td>
                <td>
                    @item.rp_StartTime
                </td>
                <td>
                    @item.rp_EndTiime
                </td>
                <td>
                    <span style="color: Red">@item.rp_StatusCode.ToString().Replace("0", "启用").Replace("1", "禁用")</span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="rpBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>
