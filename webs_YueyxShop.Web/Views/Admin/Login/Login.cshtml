@using System.Collections.Generic
@using System.Data
<!DOCTYPE html>
<html>
<head id="Head1">
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE8" />
    <title>书生网后台管理系统</title>
    <script src="../../js/jquery-1.7.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ibtnLogin").click(function () {
                submitForm();
                return false;
            });

        });
        ///提交表单
        function submitForm() {
            $.ajax({
                type: "post",
                dataType: "text",
                cache: false,
                url: "/Login/UserLogin",
                data: $("form#form1").serialize(),
                error: function (xhr, status, error) {             // Show the error            
                    alert(xhr.responseText);
                },
                success: function (msg) {
                    if (msg == 'true') {
                        document.location = '/Home/Index/';
                    }
                    else if (msg == 'false') {
                        alert("登陆失败，请检查输入的信息！");
                    }
                    else {
                        alert("请输入用户名和密码！");
                    }
                }
            });
        }
        function formEnter(e) {
            var charCode = (navigator.appName == "Netscape") ? e.which : e.keyCode;
            if (charCode == 13) {
                submitForm();
            }
        }
    </script>
    <style type="text/css">
        #login
        {
            width: 1024px;
            height:768px;
            margin:0 auto;
            background: url(../../images/login_bj.png) center center;
            background-repeat: no-repeat;
            position:relative;
        }
        body
        {
            overflow: hidden;
            background:#f0f0f0 url(../../images/body_bg.png) center center no-repeat;
            height:100%;
            margin:0;
            padding:0;
        }
        #login_form
        {
            width: 350px;
            height: 250px;
            background: url(../../images/login_bak.png) no-repeat;
            position:absolute;
            right:210px;
            bottom:260px;
        }
        #login_form #login_form_div
        {
            width: 100%;
            margin-top:80px;
        }
        #login_form #login_form_div .login_form_box
        {
            width: 100%;
            line-height: 30px;
            float: left;
            margin-bottom: 20px;
        }
        #login_form #login_form_div .login_form_box .login_form_box_content
        {
            float: left;
            width: 237px;
            margin-left: 85px;
        }
        #login_form #login_form_div .login_form_box .login_form_box_content input
        {
            height: 30px;
            width: 237px;
            line-height: 30px;
            /*color: #A08842;*/
            font-size: 20px;
            background: none;
            border: none;
        }
        #login_form #login_form_div .login_form_box .login_form_button
        {
            float: left;
            width: 100%;
            text-align: center;
            cursor: pointer;
            font-size: 24px;
            color: White;
            line-height: 40px;
            font-weight: bold;
        }
        .red
        {
            color: Red;
            font-size: small;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server" method="post">
    <div id="login">
        <div id="login_form">
            <div id="login_form_div">
                <div class="login_form_box">
                    <div class="login_form_box_content">
                        <input type="text" id="username" name="username" onkeydown="formEnter(event);" />
                    </div>
                </div>
                <div class="login_form_box">
                    <div class="login_form_box_content">
                        <input type="password" id="password" name="password" onkeydown="formEnter(event);" />
                    </div>
                </div>
                <div class="login_form_box">
                    <div class="login_form_button" id="ibtnLogin" name="ibtnLogin">
                        登&nbsp;&nbsp;&nbsp;&nbsp;录
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
    <div style="clear:both;"></div>
</body>
</html>
