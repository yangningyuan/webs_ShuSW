@using System.Collections.Generic
@using System.Data

@model IEnumerable<webs_YueyxShop.Model.vm_GroupInfo>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />

<table class="table" width="100%" layouth="138" rel="gpBox">
    <colgroup width="50px" />
    <colgroup width="130px" />
    <colgroup width="40px" />
    <colgroup width="40px" />
    <colgroup width="70px" />
    <colgroup width="70px" />
    <colgroup width="70px" />
    <colgroup width="60px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            编码
            </th>
            <th>
                商品名称
            </th>
            <th>
                团购商品数量
            </th>
            <th>
                团购商品价格
            </th>
            <th>
                团购标语
            </th>
            <th>
                团购开始时间
            </th>
            <th>
                团购结束时间
            </th>
            <th>
                已售数量
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="dli_id" rel="@item.gp_ID" ondblclick="OpenMenuBaseEdit('@item.gp_ID')">
                <td> @item.sku_Code
                </td>
                <td>
                    @item.p_Name
                </td>
                <td>
                    @item.gp_pCount
                </td>
                <td>
                    @item.gp_pPric
                </td>
                <td>
                    @item.gp_Logo
                </td>
                <td>
                    @item.gp_StartTime
                </td>
                <td>
                    @item.gp_EndTime
                </td>
                <td>
                    @item.gp_SaleCount
                </td>
                <td>
                    <span style="color: Red">@item.gp_StatusCode.ToString().Replace("0", "启用").Replace("1", "禁用")</span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="gpBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>
