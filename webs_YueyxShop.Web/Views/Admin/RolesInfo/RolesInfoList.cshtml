@using System.Collections.Generic
@using System.Data
@model IEnumerable<webs_YueyxShop.Model.RolesInfo>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="137" rel="RolesInfoBox">
    <colgroup width="30px" />
    <colgroup width="100px" />
    <colgroup width="50px" />
    <colgroup width="100px" />
    <colgroup width="50px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                角色名称
            </th>
            <th>
                排序
            </th>
            <th>
                创建时间
            </th>
            <th>
               状态
            </th>
            <th>
                描述
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { <tr target="r_ID" rel="@item.r_ID" title="双击查看详细信息" ondblclick="RolesinfoM_detail('r_ID=@item.r_ID')">
            <td>
            </td>
            <td>
                @item.r_MingCh
            </td>
            <td>
                @item.r_PaiX
            </td>
            <td>
                @item.r_CreatedOn.ToString("yyyy-MM-dd")
            </td>
            <td>
                <span style="color: Red">@item.r_StateCode.ToString().Replace("0", "启用").Replace("1", "禁用")</span>
            </td>
            <td>
                @item.r_MiaoS
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="RolesInfoBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>
