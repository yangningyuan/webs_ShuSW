@using System.Collections.Generic
@using System.Data
@model IEnumerable<webs_YueyxShop.Model.ProductRecommendTypeBase>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="138" rel="ptBox">
    <colgroup width="10px" />
    <colgroup width="30px" />
    <colgroup width="200px" />
    <colgroup width="200px" />
    <colgroup width="30px" />
    <colgroup width="100px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                ID
            </th>
            <th>
                类型名称
            </th>
            <th>
                类型标题
            </th>
            <th>
                状态
            </th>
            <th>
                类型说明
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="prt_ID" rel="@item.prt_ID" >
                <td>
                </td>
                <td>
                    @item.prt_ID
                </td>
                <td>
                    @item.prt_Name
                </td>
                <td>
                    @item.prt_Title
                </td>
                <td>
                    <span style="color: Red">@item.prt_Status.ToString().Replace("False","启用").Replace("True","禁用")</span>
                </td>
                <td>
                    @item.prt_Directions
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="ptBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>