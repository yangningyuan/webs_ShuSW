@model webs_YueyxShop.Model.ProductRecommendTypeBase
<!DOCTYPE html>

<html>
<head>
    <title>月月兴食品商行后台管理系统</title>
</head>
<body>
    <form id="form1" runat="server" method="post" action="@Url.Action("ProductRecommendTypeEdit", "ProductRecommendType")"  enctype="multipart/form-data"
    class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone);">
    @Html.HiddenFor(model => model.prt_ID)
    @Html.Hidden("Otype", @ViewData["Otype"])
    @Html.Hidden("hfPId", @ViewData["hfPId"])
    <div class="pageContent">
        <div class="pageFormContent" layouth="52">
            <div class="unit">
                <label>
                    类型名称：</label>
                @Html.TextBoxFor(model => model.prt_Name, new { @class = "required" })
            </div>
            <div class="unit">
                <label>
                    类型标题：</label>
                @Html.TextBoxFor(model => model.prt_Title, new { @class = "required" })
            </div>
            <div class="unit">
                <label>
                    类型说明：</label>
                @Html.TextAreaFor(model => model.prt_Directions, new { @style = "width:260px;height:100px;" })
            </div>
        </div>
        <div class="formBar">
            <ul>
                @if (Convert.ToBoolean(ViewData["IsHasFunRole"]))
                {
                    <li id="save">
                        <div class="buttonActive">
                            <div class="buttonContent">
                                <button type="submit" >
                                    保存</button></div>
                        </div>
                    </li>
                }
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消</button></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</body>
</html>
