<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>月月兴食品商行-产品详情</title>
<meta name="viewport" content="width=device-width,height=device-height,inital-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no;">
<!--设备原始宽度，不允许缩放，user-scalable是否允许用户手动缩放 inital-scale初始缩放比例 以及允许用户缩放到的最大和最小比例-->
<meta content="yes" name="apple-mobile-web-app-capable" />  
<meta content="black" name="apple-mobile-web-app-status-bar-style" />  
<!--在IOS系统中以上两个meta会让网页内容以应用程序风格显示，并使状态栏透明 上面一个content有俩值yes和no 此meta作用是删除默认的苹果工具栏和菜单栏，如果需要显示时不加此行meta 第二个meta的content有三个值default（白色） black(黑色) black-translucent（灰色半透明）若值为“black-translucent”将会占据页面px位置，浮在页面上方（会覆盖页面20px高度–iphone4和itouch4的Retina屏幕为40px）。-->
<meta name="format-detection" content="telephone=no">
<meta content="email=no" name="format-detection" />
<!--以上两条mate作用为：告诉设备忽略将页面中的数字识别为电话号码 将不识别邮箱-->
<link type="text/css" href="/css/wap/kaych.reset.css" rel="stylesheet"/><!--页面重置css文件-->
<link type="text/css" href="/css/wap/kaych.framework.css" rel="stylesheet"/><!--页面框架css文件-->
<link type="text/css" href="/css/wap/kaych.ui-visual.css" rel="stylesheet"/><!--视觉效果（即样式，与框架分离）css属性文件-->
<link type="text/css" href="/css/wap/kaych.indexLayout.css" rel="stylesheet"/><!--页面细致布局css文件--> 
<link rel="stylesheet" type="text/css" href="/css/wap/kaych.commons.css"><!--页面通用CSS文件-->
<link rel="stylesheet" type="text/css" href="/css/wap/kaych.media.screen.css"><!--页面分辨率检测启用不同布局CSS文件-->
<!--[if lt IE 9]>
<script src="/js/wap/html5.js"></script>
<![endif]-->
<!--[if IE 6]>
<script type="text/javascript" src="/js/wap/DD_belatedPNG.js"></script>
<script>DD_belatedPNG.fix(".png_bg,img,.png_bg a:hover");</script>
<![endif]-->
<script src="/js/wap/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="/js/wap/tabproDetails.js"></script><!--手机选项卡JS-->
<script>
    function nextpage(id) {
        var skuid = $("#skuid").val();
        if (id == 1) { //好评
            var page = $("#curpage").val();
            var pagecount = $("#haopagecount").val();
            if (page <= pagecount) {
                $.ajax({
                    type: "post",
                    url: "/wapProDetail/getpinglun?skuid=" + skuid + "&pageNum=" + (page * 1 + 1 * 1) + "&id=" + id,
                    success: function (data) {
                        $("#tabcontent1").empty();
                        $(data).appendTo('#tabcontent1');
                    }
                });
            }
        }
        if (id == 2) { //中评
            var page = $("#zhongcurpage").val();
            var pagecount = $("#zhongpagecount").val();
            if (page <= pagecount) {
                $.ajax({
                    type: "post",
                    url: "/wapProDetail/getpinglun?skuid=" + skuid + "&pageNum=" + (page * 1 + 1 * 1) + "&id=" + id,
                    success: function (data) {
                        $("#tabcontent2").empty();
                        $(data).appendTo('#tabcontent2');
                    }
                });
            }
        }
        if (id == 3) { //差评
            var page = $("#chacurpage").val();
            var pagecount = $("#chapagecount").val();
            if (page <= pagecount) {
                $.ajax({
                    type: "post",
                    url: "/wapProDetail/getpinglun?skuid=" + skuid + "&pageNum=" + (page*1+1*1) + "&id=" + id,
                    success: function (data) {
                        $("#tabcontent3").empty();
                        $(data).appendTo('#tabcontent3');
                    }
                });
            }
        }
    }

    function prepage(id) {
        var skuid = $("#skuid").val();
        if (id == 1) { //好评
            var page = $("#pageforfenye1").text().split('/')[0];
            var pagecount = $("#haopagecount").val();
            if (pagecount - 1 > 0) {
                $.ajax({
                    type: "post",
                    url: "/wapProDetail/getpinglun?skuid=" + skuid + "&pageNum=" + (page * 1 - 1 * 1) + "&id=" + id,
                    success: function (data) {
                        $("#tabcontent1").empty();
                        $(data).appendTo('#tabcontent1');
                    }
                });
            }
        }
        if (id == 2) { //中评
            var page = $("#pageforfenye2").text().split('/')[0];
            var pagecount = $("#zhongpagecount").val();
            if (pagecount - 1 > 0) {
                $.ajax({
                    type: "post",
                    url: "/wapProDetail/getpinglun?skuid=" + skuid + "&pageNum=" + (page * 1 - 1 * 1) + "&id=" + id,
                    success: function (data) {
                        $("#tabcontent2").empty();
                        $(data).appendTo('#tabcontent2');
                    }
                });
            }
        }
        if (id == 3) { //差评
            var page = $("#pageforfenye3").text().split('/')[0];
            var pagecount = $("#chapagecount").val();
            if (pagecount - 1 > 0) {
                $.ajax({
                    type: "post",
                    url: "/wapProDetail/getpinglun?skuid=" + skuid + "&pageNum=" + (page * 1 - 1 * 1) + "&id=" + id,
                    success: function (data) {
                        $("#tabcontent3").empty();
                        $(data).appendTo('#tabcontent3');
                    }
                });
            }
        }
    }

    var fromUrl = document.referrer;
    if (fromUrl == '') {
        fromUrl = '/Index/Index';
    }
    else if (fromUrl.indexOf("Register") > 0) {
        fromUrl = '/Index/Index';
    }
    function goback() {
        location.href = fromUrl;
    }
</script>
</head>

<body>
	<div class="wrap hidden">
        <header>
	        <div class="wrap hidden relative">
    	        <div class="side-icon left textrt"><a href="javascript:void(0)" onclick="goback()">返回</a></div>
    	        <h2 class="titles">@ViewBag.vmpinfolist.p_Name</h2>
            </div><!--wrap end-->
        </header>
		<div class="main">
    		<div class="wrapper">
            	<ul class="evaluation-list" style="margin-top: 50px;">
       				<li><a href="javascript:void(0);" onclick="showThis(1,'divNumber','tabcontent','tablink');" class="on" id="tablink1">好评（ @ViewData["hao"]）</a></li>
                    <li><a href="javascript:void(0);" onclick="showThis(2,'divNumber','tabcontent','tablink');" id="tablink2">中评（@ViewData["zhong"]）</a></li>
                    <li><a href="javascript:void(0);" onclick="showThis(3,'divNumber','tabcontent','tablink');" id="tablink3">差评（@ViewData["cha"]）</a></li>
    			</ul>
                <div class="tab_box">
                    <input type="hidden" value="@ViewData["skuid"]" id="skuid" />
                    <input type="hidden" value="@ViewData["hao"]" id="haocount" />
                    <input type="hidden" value="@ViewData["haopage"]" id="curpage" />
                    <input type="hidden" value="@ViewData["pagerows"]" id="pagerows" />
                    <input type="hidden" value="@ViewData["haopagecount"]" id="haopagecount" />
              		<div class="inBox" id="tabcontent1" name="divNumber">
                  		<ul id="tab1">
                        @if (ViewBag.pinlunh.Count > 0)
                        {
                            foreach (var item in ViewBag.pinlunh)
                            {
                        	    <li>
                            	    <dl>
                                	    <dt>@item.pa_Content</dt>
                                        <dd>
                                    	    <div class="stars star-icon5 alignleft"></div>
                                            <div class="times alignright">@item.pa_CreatedOn</div>
                                        </dd>
                                    </dl>
                                </li>
                            }
                        }
                        </ul>
                        <div class="page">
                        	<a href="javascript:void(0)" onclick="prepage(1)">上一页</a><span id="pageforfenye1">@ViewData["haopage"]/@ViewData["haopagecount"]</span><a href="javascript:void(0)" onclick="nextpage(1)">下一页</a>
                        </div><!--page end-->
              		</div><!--inBox end-->
                    <input type="hidden" value="@ViewData["zhong"]" id="zhongcount" />
                    <input type="hidden" value="@ViewData["zhongpage"]" id="zhongcurpage" />
                    <input type="hidden" value="@ViewData["zhongpagecount"]" id="zhongpagecount" />
              		<div class="inBox hide" id="tabcontent2" name="divNumber">
                  		<ul id="tab2">
                        @if (ViewBag.pinlunz.Count > 0)
                        {
                            foreach (var item in ViewBag.pinlunz)
                            {
                        	    <li>
                            	    <dl>
                                	    <dt>@item.pa_Content</dt>
                                        <dd>
                                    	    <div class="stars star-icon5 alignleft"></div>
                                            <div class="times alignright">@item.pa_CreatedOn</div>
                                        </dd>
                                    </dl>
                                </li>
                            }
                        }
                        </ul>
                        <div class="page">
                        	<a href="javascript:void(0)"  onclick="prepage(2)">上一页</a><span id="pageforfenye2">@ViewData["zhongpage"]/@ViewData["zhongpagecount"]</span><a href="javascript:void(0)" onclick="nextpage(2)">下一页</a>
                        </div><!--page end-->
              		</div><!--inBox end-->
                    <input type="hidden" value="@ViewData["cha"]" id="chacount" />
                    <input type="hidden" value="@ViewData["chapage"]" id="chacurpage" />
                    <input type="hidden" value="@ViewData["chapagecount"]" id="chapagecount" />
              		<div class="inBox hide" id="tabcontent3" name="divNumber">
                  		<ul id="tab3">
                        @if (ViewBag.pinlunc.Count > 0)
                        {
                            foreach (var item in ViewBag.pinlunc)
                            {
                        	    <li>
                            	    <dl>
                                	    <dt>@item.pa_Content</dt>
                                        <dd>
                                    	    <div class="stars star-icon5 alignleft"></div>
                                            <div class="times alignright">@item.pa_CreatedOn</div>
                                        </dd>
                                    </dl>
                                </li>
                            }
                        }
                        </ul>
                        <div class="page">
                        	<a href="javascript:void(0)"  onclick="prepage(3)">上一页</a><span id="pageforfenye3">@ViewData["chapage"]/@ViewData["chapagecount"]</span><a href="javascript:void(0)" onclick="nextpage(3)">下一页</a>
                        </div><!--page end-->
              		</div><!--inBox end-->
          		</div><!--tab_box end-->
            </div><!--wrapper end-->
    	</div><!--main end-->
    </div><!--wrap end-->
    <div class="zw-div"></div>
<div class="footer-nav">
	<div class="wrap">
    	<ul class="footerNav">
			<li></li>
            <li><a href="#"><img src="/images/icons/prev_01.png" alt="前一页" /></a></li>
            <li><a href="#"><img src="/images/icons/next_01.png" alt="下一页" /></a></li>
            <li><a href="#"><img src="/images/icons/icons_01.png" alt="刷新" /></a></li>        	
        </ul>
    </div><!--wrap end-->
</div><!--footer-nav end-->
</body>
</html>
