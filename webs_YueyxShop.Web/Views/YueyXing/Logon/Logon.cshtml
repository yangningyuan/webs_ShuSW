<script type="text/javascript">
    function GetRequest() {
        var url = location.search; //获取url中"?"符后的字串
        
        var theRequest = new Object();
        if (url.indexOf("?") != -1) {
            var str = url.substr(1);
            strs = str.split("&");
            for (var i = 0; i < strs.length; i++) {
                theRequest[strs[i].split("=")[0]] = (strs[i].split("=")[1]);
            }
        }
        return theRequest;
    }

    var Request = new GetRequest();
    $(document).ready(function () {
        $("#publicHead").remove();
        $("#top-head").remove();
        var usertype = Request["UserType"];

        if (usertype == "2") {
            var logontype = document.getElementById("multy");
            logontype.click();

        }
    });

    var fromUrl = document.referrer;
    if (fromUrl == '') {
        fromUrl = '/Index/Index';
    }
    else if (fromUrl.indexOf("Register") > 0) {
        fromUrl = '/Index/Index';
    }
    else if (fromUrl.indexOf("FindPassWord") > 0) {
        fromUrl = '/Index/Index';
    }
    else if (fromUrl.indexOf("Logon") > 0) {
        fromUrl = '/Index/Index';
    }
    function SingleLogon() {
        var usname = $('#SingleUname').val();
        var pswd = $('#SinglePwd').val();
        var autologon = document.getElementById("singleAutoLogon").checked == true ? "1" : "0";

        if (usname == '' || pswd == '') {
            alert("请输入正确的用户名及密码");
            return;
        }
        var url = '/_ashx/Logon.ashx?type=SingleLogon&uname=' + usname + '&passwd=' + pswd + '&AutoLogon=' + autologon;
        url = encodeURI(url)
        $.post(url, function (msg) {
            if (msg == "1") {
                window.location.href = fromUrl;
            }
            else {
                alert(msg);
                return;
            }
        });
    }
    function BsnsLogon() {
        var usname = $('#bnsUname').val();
        var pswd = $('#bsnsPwd').val();
        var autologon = document.getElementById("bsnsAutoLogon").checked == true ? "1" : "0";

        if (usname == '' || pswd == '') {
            alert("请输入正确的用户名及密码");
            return;
        }
        $.post('/_ashx/Logon.ashx?type=DsnsLogon&uname=' + usname + '&passwd=' + pswd + '&AutoLogon=' + autologon, function (msg) {
            if (msg == "1") {
                window.location.href = fromUrl;
            }
            else {
                alert(msg);
                return;
            }
        });
    }
    function BsnsEnter(e) {
        var charCode = (navigator.appName == "Netscape") ? e.which : e.keyCode;
        if (charCode == 13) {
            BsnsLogon();
        }
    }
    function SingleEnter(e) {
        var charCode = (navigator.appName == "Netscape") ? e.which : e.keyCode;
        if (charCode == 13) {
            var pswd = $('#bsnsPwd').val();
            if (pswd != "") {
                SingleLogon();
            }
        }
    }

</script>

