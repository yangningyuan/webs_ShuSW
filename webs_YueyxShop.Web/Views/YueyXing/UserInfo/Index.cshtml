                                    <a class="add" onclick="setAmount.add('#p-@Model.dt.Rows[i]["sku_id"].ToString()')" href="javascript:void(0)">
                                    </a><a class="reduce" onclick="setAmount.reduce('#p-@Model.dt.Rows[i]["sku_id"].ToString()')" href="javascript:void(0)">
                                    </a>
                                </div>
                            </div>
