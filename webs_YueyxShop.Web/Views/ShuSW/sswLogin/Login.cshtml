    Layout = "~/Views/ShuSW/sswMaster/LayoutPage.cshtml";
}
<script src="~/Content/js/jquery.js"></script>
<script language="javascript" type="text/javascript">
    $(function () {
        $("#sublogin").click(function () {

            function strToJson(str) {
                var json = eval('(' + str + ')');
                return json;
            }

            var username = $("#pcusername").val();
            var password = $("#pcpassword").val();

            if (username == null||username == "")
            {
                alert("请输入E-mail账号");
                $("#pcusername").focus();
                return false;
            } else if ( password == null||password == "") {
                alert("请输入密码");
                $("#pcpassword").focus();
                return false;
            } else {
                $.ajax({
                    url: "/_ashx/dataSave_manager_json.ashx?type=pclogin",
                    type: "post",
                    data: { username:username, password: password },
                    success: function (data) {
                        
                        var re = strToJson(data);
                        if (re.result == "保存成功！") {
                            window.location.href="/sswHome/Index";
                        } else {
                            alert("登陆失败，用户名或密码错误！");
                            $("#pcusername").focus();
                            return false;
                        }
                    }
                });
            }
        });
    });
</script>
