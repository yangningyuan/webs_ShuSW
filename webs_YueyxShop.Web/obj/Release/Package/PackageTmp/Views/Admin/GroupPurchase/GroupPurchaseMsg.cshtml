@using System.Collections.Generic
@using System.Data

<!DOCTYPE html>
<html>
<head>
    <title>月月兴食品商行后台管理系统</title>
    
    <script type="text/javascript">
        $(document).ready(function () {
            divSearch($("#pagerForm", navTab.getCurrentPanel()), "gpBox");
        });
</script>
</head>
<body>
    <form id="pagerForm" method="post"  action="@Url.Action("GroupPurchaseList", "GroupPurchase")" onsubmit="return divSearch(this,'gpBox');">
    <input type="hidden" id="hf_add" name="hf_add" value="0"/>
    <div class="pageHeader">
        <div class="searchBar">
            <table class="searchContent">
                <tr>
                    <td>
                        商品名称：
                    </td>
                    <td>
                        <input type="text" name="txtPrName" />
                    </td>
                    <td >
                        在有效期内：
                    </td>
                    <td>
                        
                        <input id="txtDatetime" type="text" name="txtDatetime" class="date" dateFmt="yyyy-MM-dd HH:mm:ss" />
                    </td>
                    <td>
                    
                    </td>
                </tr>
            </table>
            <div class="subBar">
                <ul>
                    <li>
                        <div class="buttonActive">
                            <div class="buttonContent">
                                <button type="submit" id="btn_Select">
                                    检索</button></div>
                        </div>
                    </li>
                    <li>
                        <div class="buttonActive">
                            <div class="buttonContent">
                                <button type="reset">
                                    重置</button></div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--列表-->
    <div class="pageContent">
        <div class="panelBar">
            <ul class="toolBar">
              
                @if (Convert.ToBoolean(ViewData["IsHasFunRole"]))
                {
                    <li><a class="add" href="@Url.Action("GroupPurchaseEdit?otype=add&dli_id={hf_add}", "GroupPurchase")"  target="dialog" rel="w_GroupPurchaseEdit">
                        <span>添加商品</span></a></li>
                    <li class="line">line</li>
                    <li><a class="edit" href="@Url.Action("GroupPurchaseEdit?otype=modify&dli_id={dli_id}", "GroupPurchase")" rel="w_GroupPurchaseEdit"
                        target="dialog"  ><span>编辑</span></a></li>
                    <li class="line">line</li>
                    <li><a class="delete" href="@Url.Action("GroupPurchaseDelete?dli_id={dli_id}", "GroupPurchase")" rel="w_GroupPurchaseDelete"
                    target="ajaxTodo" title='确定删除' warn="请选择信息！！！"><span>删除</span></a></li>
                    <li class="line">line</li>
                    <li><a class="unlock"  href="@Url.Action("GroupPurchaseEnable?otype=enable&dli_id={dli_id}", "GroupPurchase")"
                    target="ajaxTodo" warn="请选择信息！！！"><span>启用</span></a></li>
                    <li><a class="lock"  href="@Url.Action("GroupPurchaseEnable?otype=disable&dli_id={dli_id}", "GroupPurchase")"
                    target="ajaxTodo" warn="请选择信息！！！"><span>禁用</span></a></li>
                }
            </ul>
        </div>
        <div id="gpBox">
        </div>
    </div>
    </form>
</body>
</html>
