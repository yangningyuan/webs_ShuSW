@using System.Collections.Generic
@using System.Data
@using webs_YueyxShop.Model 
           
@Html.Hidden("hfPId", @ViewData["hfPId"])
<table class="table" width="100%" layouth="138" rel="pBox">
    <colgroup width="30px" />
    <colgroup width="200px" />
    <colgroup width="200px" />
    <colgroup width="100px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup width="30px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                商品分类
            </th>
            <th>
                 商品名称
            </th>
            <th>
                计量单位
            </th>
            <th>
                所在省
            </th>
            <th>
                所在市
            </th>
            <th>
                所在县
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow item in ((System.Data.DataTable)ViewData["PageList"]).AsEnumerable())
        {
            <tr target="dli_id" rel="@item["p_ID"]" ondblclick="OpenMenuBaseEdit('@item["p_ID"]')">
                <td>
                </td>
                <td>
                    @item["pt_Name"]
                </td>
                <td>
                   @item["p_Name"]
                </td>
                <td style="height:auto">
                    @item["p_MeasurementUnit"]
                </td>
                <td>
                    @item["p_Province"]
                </td>
                <td>
                    @item["p_City"]
                </td>
                <td>
                   @item["p_County"]
                </td>
                <td>
                    <span style="color: Red">@item["p_StatusCode"].ToString().Replace("0", "启用").Replace("1", "禁用")</span>
                </td>
            </tr>
        }
    </tbody>
</table>


