@using System.Collections.Generic
@using System.Data
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="170" rel="RejectionBox">
    <colgroup width="30px" />
    <colgroup width="50px" />
    <colgroup width="200px" />
    <colgroup width="300px" />
    <colgroup width="300px" />
    <colgroup />
    <thead>
        <tr>
            <th>
            </th>
            <th>
                退货单号
            </th>
            <th>
                退货日期
            </th>
            <th>
                订单号
            </th>
            <th>
                退货总金额
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow item in ((System.Data.DataTable)ViewData["PageList"]).AsEnumerable())
        {
            <tr target="r_ID" rel="@item["r_ID"]">
                <td>
                </td>
                <td>
                    @item["r_Code"]
                </td>
                <td>
                    @item["r_Date"]
                </td>
                <td>
                    @item["o_Code"]
                </td>
                <td>
                    @item["r_Price"]
                </td>
                <td>
                    <span style="color: Red">@item["r_Status"].ToString().Replace("0", "未处理").Replace("1", "已拒绝").Replace("2", "已完成")</span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="RejectionBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>