@using System.Collections.Generic
@using System.Data
<!DOCTYPE html>
<html>
<head id="Head1">
    <title>月月兴食品商行后台管理系统</title>
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            var d_ID = $("#hf_dID", $.pdialog.getCurrent()).val();
            if (d_ID != "") {
                $("#depName", $.pdialog.getCurrent()).attr("readonly", "readonly");
            }
            divSearch($("#pagerForm", $.pdialog.getCurrent()), "SelectTeacherBox");
        });

        function SelectEmploy_SelValueNone() {
            $.bringBack({ id: '', orgName: '', orgNum: '' })
        }
    </script>
</head>
<body>
    <form id="pagerForm" method="post" action="@Url.Action("SelectTeacherList", "EmployeeBase")" onsubmit="return divSearch(this,'SelectTeacherBox');">
    @Html.Hidden("d_ID", @ViewData["d_ID"])
    <div class="pageHeader">
        <div class="searchBar">
            <table class="searchContent">
                <tr>
                    <td>
                        教师姓名：
                    </td>
                    <td>
                        @Html.TextBox("empName")
                    </td>
                    <td>
                        部门名称 ：
                    </td>
                    <td>
                        @Html.TextBox("depName", @ViewData["d_MingCh"])
                    </td>
                </tr>
            </table>
            <div class="subBar">
                <ul>
                    <li>
                        <div class="buttonActive">
                            <div class="buttonContent">
                                <button type="submit">
                                    检索</button></div>
                        </div>
                    </li>
                    <li>
                        <div class="buttonActive">
                            <div class="buttonContent">
                                <button type="button" onclick="SelectEmploy_SelValueNone();">
                                    取消</button></div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--列表-->
    <div class="pageContent">
        <div id="SelectTeacherBox">
        </div>
    </div>
    </form>
</body>
</html>
