@using System.Collections.Generic
@using System.Data
@model IEnumerable<webs_YueyxShop.Model.VipRank>
<input type="hidden" name="pageNum" value="@ViewData["CurrentPage"]" />
<input type="hidden" name="numPerPage" value="@ViewData["NumberPage"]" />
<input type="hidden" name="orderDirection" value="@ViewData["OrderDirection"]" />
<input type="hidden" name="orderField" value="@ViewData["OrderFile"]" />
<table class="table" width="100%" layouth="138" rel="VipRankBox">
    <colgroup width="30px" />
    <colgroup width="150px" />
    <colgroup width="80px" />
    <colgroup width="120px" />
    <colgroup width="120px" />
    <colgroup width="140px" />
    <colgroup />
    <thead>
        <tr>
            <th>
                会员等级
            </th>
            <th>
                会员等级名称
            </th>
            <th>
                会员折扣
            </th>
            
            <th>
                会员下限积分
            </th>
            <th>
                会员上限积分
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr target="r_ID" rel="@item.r_ID" >
                <td>
                        <span>@item.r_Rank</span>
                </td>
                <td>
                    @if (item.r_Name.ToString().Length < 25)
                    {
                        <span>@item.r_Name</span>
                    }
                    else
                    {
                        <span>@item.r_Name.ToString().Substring(0, 25).ToString()</span><span>......</span>
                    }
                </td>
                <td>
                        <span>@item.r_ZheK</span>
                </td>
                
                <td>
                        <span>@item.r_Score</span>
                </td>
                <td>
                        <span>@item.r_UpperScore</span>
                </td>
                <td>
                    @if (item.r_Status == 0)
                    {
                        <span style="color:Green;">启用</span>
                    }
                    else if(item.r_Status==1) 
                    {
                        <span style="color:Red;">禁用</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panelBar">
    <div class="pages">
        <span>共 @ViewData["TotalCount"] 条</span>
    </div>
    <div class="pagination" rel="VipRankBox" targettype="navTab" totalcount="@ViewData["TotalCount"]"
        numperpage="@ViewData["NumberPage"]" pagenumshown="@ViewData["PagenumShown"]" currentpage="@ViewData["CurrentPage"]">
    </div>
</div>
