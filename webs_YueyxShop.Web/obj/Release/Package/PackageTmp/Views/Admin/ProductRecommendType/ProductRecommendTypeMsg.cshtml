<!DOCTYPE html>
<html>
<head>
    <title>月月兴食品商行后台管理系统</title>
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            divSearch($("#pagerForm", navTab.getCurrentPanel()), "ProductRecommendTypeBox");
        });
</script>
</head>
<body>
<form id="pagerForm" method="post"  action="@Url.Action("ProductRecommendTypeList", "ProductRecommendType")" onsubmit="return divSearch(this,'ProductRecommendTypeBox');">
    <input type="hidden" id="hfPid" name="hfPid" value="0" />
    <input type="hidden" id="at_add" name="at_add" />
    <input type="hidden" id="hf_daohang" name="hf_daohang" />
    <input type="hidden" id="hf_cengj" name="hf_cengj" value="1" />
    <input type="hidden" id="hf_bianma" name="hf_bianma" />
    <input type="hidden" id="hf_type" name="type" />
    <div class="pageHeader">
        <div class="searchBar">
            <table class="searchContent" style="width: 100%;">
                <colgroup>
                    <col style="width: 40px;" />
                    <col />
                </colgroup>
                <tr>
                    <td>
                        导航:
                    </td>
                    <td>
                        <label id="div_daohang">
                        </label>
                    </td>
                </tr>
            </table>
        </div>
        </div>
        <!--列表-->
        <div class="pageContent">
        <div class="panelBar">
            <ul class="toolBar">
                <li><a class="details" href="@Url.Action("ProductRecommendMsg?prt_ID={prt_ID}", "ProductRecommend")" target="navTab" rel="w_ProductRecommendEdit">
                    <span>查看详情</span></a></li>
                @if (Convert.ToBoolean(ViewData["IsHasFunRole"]))
                {
                    <li class="line">line</li>
                    <li><a class="add" href="@Url.Action("ProductRecommendTypeEdit?otype=add", "ProductRecommendType")" target="dialog" rel="w_ProductRecommendTypeEdit">
                        <span>添加</span></a></li>
                    <li><a class="edit" href="@Url.Action("ProductRecommendTypeEdit?otype=modify&prt_ID={prt_ID}", "ProductRecommendType")" target="dialog" rel="w_ProductRecommendTypeEdit">
                        <span>修改</span></a></li>
                    <li class="line">line</li>
                    <li><a class="delete" href="@Url.Action("ProductRecommendTypeDelete?prt_ID={prt_ID}", "ProductRecommendType")" rel="w_ProductRecommendTypeDelete"
                    target="ajaxTodo" title='确定取消？' warn="请选择信息！！！"><span>删除</span></a></li>
                    <li class="line">line</li>
                    <li><a class="unlock" href="@Url.Action("ProductRecommendTypeEnable?otype=enable&prt_ID={prt_ID}", "ProductRecommendType")" rel="w_ProductRecommendTypeEnable"
                        target="ajaxTodo" ><span>启用</span></a></li>
                    <li class="line">line</li>
                    <li><a class="lock" href="@Url.Action("ProductRecommendTypeEnable?otype=disable&prt_ID={prt_ID}", "ProductRecommendType")" rel="w_ProductRecommendTypeEnable"
                        target="ajaxTodo" ><span>禁用</span></a></li>
                }
            </ul>
        </div>
        <div id="ProductRecommendTypeBox">

        </div>
    </div>
</form>

</body>
</html>
