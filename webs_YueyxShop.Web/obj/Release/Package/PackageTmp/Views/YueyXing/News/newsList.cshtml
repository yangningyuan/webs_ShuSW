	<div class="proDetails-class borders">
		<ul class="ul-newsList">

        @{
            if (ViewData["newsList"] != null)
            {
                foreach (var newsB in ((List<webs_YueyxShop.Model.NewsBase>)ViewData["newsList"]))
                {
                    int length = newsB.n_Content.Length;
                    length = length >= 160 ? 160 : length;
                    string summary = newsB.n_Content.Substring(0,length);
                    <li>
            	        <dl>
                	        <dt>
                    	        <h3><a href="/News/newsDetails?id=@newsB.n_ID">@newsB.n_Title</a></h3>
                                <p>@newsB.n_CreatedOn</p>
                                <div class="read-more"><a href="/News/newsDetails?id=@newsB.n_ID"></a></div>
                            </dt>
                            <dd>@Html.Raw(newsB.n_Content)</dd>
                        </dl>
                    </li>
                }
             }
          }
        	
        </ul>
