			        <div id="con_one_4" style="display:none;">
            	        <ul class="ul-pro1">
                        @{
                            if (ViewData["超值推荐list"] != null)
                            {
                                int index = 0;
                                foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewData["超值推荐list"]).Rows)
                                {
                	                <li>
                    	                <dl>
                        	                <dt><a href="/ProDetail/ProDetail?skuid=@row["sku_ID"]"><img style="max-width:215px;max-height:175px;" name="page_cnt_1" src="@row["pi_Url"]" alt="@row["p_Name"]" /></a><div class="sale-bg">@row["prt_Title"]</div></dt>
                                            <dd><a href="/ProDetail/ProDetail?skuid=@row["sku_ID"]">@row["p_Name"]</a></dd>
