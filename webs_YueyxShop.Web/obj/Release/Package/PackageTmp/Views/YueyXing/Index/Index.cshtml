                                        </dl>
                                    </li>
                                    if (++index == 6)
                                    {
                                        break;
                                    }
                                }
                            }
                        }
                        </ul>
                    </div>
                    <div id="con_one_5" style="display:none;">
            	        <div class="groupBuy-list lazyload">
    				        <ul>
                            @{
                                if(ViewData["GroupPurchase"] != null)
                                {
                                    int i = 0;
                                    foreach (var purchase in ((List<webs_YueyxShop.Model.vm_GBDetails>)ViewData["GroupPurchase"]))
                                    {
        				                <li>
        					                <div class="m">
            					                <div class="new">@purchase.gp_Logo</div>
            					                <div class="con">
									                <a href="/groupBuy/groupbuyDetails?gpid=@purchase.gp_ID" target="_blank" class="hover"><img style="width:280xp;height:235px;" name="page_cnt_1" src="@purchase.pi_Url" /><i></i></a>
                				                </div>
            					                <h2 title="@purchase.p_Name">@purchase.p_Name @purchase.shuxing</h2>
            					                <em>@purchase.gp_Slogan</em>
            					                <span class="cover lasttime" id="time01">剩余时间：<font class="day">00</font>天<font class="hour">00</font>时<font class="minute">00</font>分<font class="second">00</font>秒</span>
            				                </div>
            				                <div class="buy_box">
            					                <p><span>￥</span><strong>@purchase.gp_pPric</strong></p>
            					                <div class="person">
              						                <p><font>@purchase.gp_SaleCount</font><span> 人已购买</span></p>
              						                <p>原价：@purchase.sku_scPrice</p>
            					                </div>
            					                <a href="/groupBuy/groupbuyDetails?gpid=@purchase.gp_ID" target="_blank">立即抢购</a>
            				                </div>
      					                </li>
                                        if (++i == 3)
                                        {
                                            break;
                                        }
                                    }
                                }
                            }
        				        <div class="clear"></div>
    				        </ul>
				        </div><!--groupBuy-list end-->
                        <div class="tg-ad">
                            @{
                                if(ViewData["AdTuanG"] != null)
                                {
                                    foreach (var ad in ((List<webs_YueyxShop.Model.Adert>)ViewData["AdTuanG"]))
                                    {
                	                    <a href="@ad.a_Link" class="alignleft"><img style="max-width:435px;max-height:128px;" name="page_cnt_1" src="@ad.a_Image" alt="团购" /></a>
                                    }
                                }
                             }
                        </div><!--tg-ad-->
                    </div>
		        </div><!--menudiv end-->
                <div class="clear"></div>
            </div><!--pro-tab end-->
            <div class="w270 alignright">
    	        <div class="news borders">
        	        <div class="news-title">
            	        <div class="news-icon"></div>
                        <h2><span>最新</span>公告</h2>
                        <a href="/News/newsList">更多>></a>
                    </div>
                    <ul class="news-cont">
                    @{
                        if (ViewData["NewAd"] != null)
                        {
                            foreach (var ad in ((List<webs_YueyxShop.Model.NewsBase>)ViewData["NewAd"]))
                            {
                                <li><a href="/News/newsDetails?id=@ad.n_ID">@ad.n_Title</a></li>
                            }
                        }
                    }
                    </ul>
                </div><!--borders end-->
                <div class="clearh"></div>
                <div class="tg-banner borders" id="img-play">
        	        <ul>
                        @{
                            if(ViewData["Adtgban1"] != null)
                            {
                                foreach (var ad in ((List<webs_YueyxShop.Model.Adert>)ViewData["Adtgban1"]))
                                { 
				                    <li><a href="@ad.a_Link"><img style="max-width:268px;max-height:168px;" name="page_cnt_1" src="@ad.a_Image" /></a></li>
                                }
                            }
                        }
			        </ul>
			        <a class="skip prevs" title="上一张">上一张</a>
			        <a class="skip nexts" title="下一张">下一张</a>
                </div><!--tg-banner-->
                <div class="clearh"></div>
                <div class="ad-banner">
        	        <ul class="pic">
                        @{
                            if(ViewData["Adtgban2"] != null)
                            {
                                foreach (var ad in ((List<webs_YueyxShop.Model.Adert>)ViewData["Adtgban2"]))
                                { 
				                    <li><a href="@ad.a_Link" target="_blank"><img style="max-width:270px;max-height:135px;" name="page_cnt_1" src="@ad.a_Image" /></a></li>
                                }
                            }
                        }
			        </ul>
			        <ul class="hd">
                        @{
                            if(ViewData["Adtgban2"] != null)
                            {
                                foreach (var ad in ((List<webs_YueyxShop.Model.Adert>)ViewData["Adtgban2"]))
                                { 
				                    <li></li>
                                }
                            }
                        }
			        </ul>
                </div><!--ad-banner end-->
            </div><!--w270 end-->
            <div class="clearh"></div>
            <div class="ads">
                @{
                    if(ViewData["Adbt"] != null)
                    {
                        foreach (var ad in ((List<webs_YueyxShop.Model.Adert>)ViewData["Adbt"]))
                        { 
				            <a href="@ad.a_Link" ><img style="max-width:595px;max-height:70px;" name="page_cnt_1" src="@ad.a_Image" alt="广告" /></a>
                        }
                    }
                }
            </div>
            <div class="clearh"></div>

            <!--产品分类开始-->
            @{
                if (ViewData["ProductType"] != null)
                {
                    foreach (var pt in (List<webs_YueyxShop.Model.ProductTypeBase>)ViewData["ProductType"])
                    {
                        @Html.Action("ProductType", "Index", new { ptID = pt.pt_ID, ptName = pt.pt_Name })
                    }
                }
            }
            
            <!--产品分类结束-->


