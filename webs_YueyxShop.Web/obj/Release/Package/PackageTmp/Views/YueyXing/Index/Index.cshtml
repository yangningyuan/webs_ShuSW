@{
    ViewBag.Title = "月月兴食品商行";
    Layout = "~/Views/YueyXing/MasterPage/Index.cshtml";
}


        <link type="text/css" href="/css/kaych.index.css" rel="stylesheet"/><!--首页细则css文件-->

        <div class="block_home_slider">
	        <div id="home_slider" class="flexslider">
    	        <ul class="slides">
                @{
                    if (ViewData["AdertTop"] != null)
                    {
                        foreach (var ad in ((List<webs_YueyxShop.Model.Adert>)ViewData["AdertTop"]))
                        {
        	                <li><div class="slide"><a href="@ad.a_Link" target="_blank"><img style="width:2000px;height:430px;" name="page_cnt_1" src="@ad.a_Image" alt="@ad.a_Title" /></a></div></li>
                        }
                    }
                }
                </ul>
	        </div><!--flexslider end-->
        <!--轮播图JS-->
        <script type="text/javascript">
            $(function () {
                $('#home_slider').flexslider({
                    animation: 'slide',
                    controlNav: true,
                    directionNav: true,
                    animationLoop: true,
                    slideshow: true,
                    useCSS: false
                });
            });
        </script>          
        </div><!--block_home_slider end-->
        <div class="clearh"></div>
        <div class="wrap">
	        <div class="pro-tab border-nonetop borders alignleft">
    	        <div class="menu" id="tab1">
			        <ul>
				        <li id="one1" onclick="setTab('one',1)"><span>@ViewData["热卖专区"]</span></li>
				        <li id="one2" onclick="setTab('one',2)"><span>@ViewData["新品专区"]</span></li>
				        <li id="one3" onclick="setTab('one',3)"><span>@ViewData["特价专区"]</span></li>
				        <li id="one4" onclick="setTab('one',4)"><span>@ViewData["超值推荐"]</span></li>
                        <li id="one5" onclick="setTab('one',5)"><span>疯狂团购</span></li>
			        </ul>
		        </div><!--menu end-->
		        <div class="menudiv">
			        <div id="con_one_1">
            	        <ul class="ul-pro1">
                        @{
                            if (ViewData["热卖专区list"] != null)
                            {
                                int index = 0;
                                foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewData["热卖专区list"]).Rows)
                                {
                	                <li>
                    	                <dl>
                        	                <dt><a href="/ProDetail/ProDetail?skuid=@row["sku_ID"]"><img style="max-width:215px;max-height:175px;" name="page_cnt_1" src="@row["pi_Url"]" alt="@row["p_Name"]" /></a><div class="sale-bg">@row["prt_Title"]</div></dt>
                                            <dd><a href="/ProDetail/ProDetail?skuid=@row["sku_ID"]">@row["p_Name"]</a></dd>
                                            <dd><span>￥@row["sku_Price"]</span></dd>
                                        </dl>
                                    </li>
                                    if (++index == 6)
                                    {
                                        break;
                                    }
                                }
                            }
                        }
                        </ul>
                    </div>
			        <div id="con_one_2" style="display:none;">
            	        <ul class="ul-pro1">
                        @{
                            if (ViewData["新品专区list"] != null)
                            {
                                int index = 0;
                                foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewData["新品专区list"]).Rows)
                                {
                	                <li>
