<script type="text/javascript">

    $(function () {
        $('input[type="text"]').focus(function () {
            $('.warn').hide();
        });
        $('input[type="password"]').focus(function () {
            $('.warn').hide();
        });
    });

    function showError(msg) {
        $('.warn').html(msg);
        $('.warn').show();
    }

    function IsEmpty(isSingle) {
        var result = false;
        if (isSingle) {
            var name = $('#sname').val();
            var pwd = $('#spwd').val();
            var repwd = $('#srepwd').val();
            var phone = $('#sphone').val();
            var email = $('#semail').val();
            if (name == "" || pwd == "" || repwd == "" || phone == "" || email == "") {
                result = true;
            }
        } else {
            var name = $('#cname').val();
            var pwd = $('#cpwd').val();
            var repwd = $('#crepwd').val();
            var phone = $('#cphone').val();
            var email = $('#cemail').val();
            var yyzz = $('#cyyzz').val();
            if (name == "" || pwd == "" || repwd == "" || phone == "" || email == "" || yyzz == "") {
                result = true;
            }
        }
        return result;
    }

    function ConfirmPassWord(isSingle) {
        var result = false;
        if (isSingle) {
            var pwd = $('#spwd').val();
            var repwd = $('#srepwd').val();
            if (repwd == pwd) {
                result = true;
            }
        } else {
            var pwd = $('#cpwd').val();
            var repwd = $('#crepwd').val();
            if (repwd == pwd) {
                result = true;
            }
        }
        return result;
    }

    function Register(isSingle) {
        if (IsEmpty(isSingle)) {
            showError("请将信息填写完整！");
            return;
        }
        if (!ConfirmPassWord(isSingle)) {
            showError("确认密码和密码不一致！");
            return;
        }
        var par = "";
        if (isSingle) {
            var name = $('#sname').val();
            var pwd = $('#spwd').val();
            var phone = $('#sphone').val();
            var email = $('#semail').val();
            par = "name=" + name + "&pwd=" + pwd + "&phone=" + phone + "&email=" + email;
            par = encodeURI(par);
        } else {
            var name = $('#cname').val();
            var pwd = $('#cpwd').val();
            var phone = $('#cphone').val();
            var email = $('#cemail').val();
            var yyzz = $('#cyyzz').val();
            par = "name=" + name + "&pwd=" + pwd + "&phone=" + phone + "&email=" + email + "&yyzz=" + yyzz;
            par = encodeURI(par);
        }

        $.ajax({
            type: 'post',
            url: "/wapRegister/SaveRegister?" + par,
            async: true,
            success: function (data) {
                if (data == "") {
                    window.location.href = "/wapRegister/RegisterSuccess";
                } else {
                    showError(data);
                    return;
                }
            }
        });
    }

</script>


